DROP DATABASE gyt;
CREATE DATABASE gyt;
use gyt;

CREATE TABLE client (
	client_id int PRIMARY KEY AUTO_INCREMENT,
    fname varchar(255),
    lname varchar(255),
    gender ENUM ('female','male') DEFAULT 'male',
    age int,
    contact_add varchar(255),
    email varchar(255),
    password varchar(255)

);

CREATE TABLE transaction_records(
	trans_id INT PRIMARY KEY AUTO_INCREMENt,
    transname varchar(255),
    client_id int,
    amount int,
    date date,
    CONSTRAINT FKclientID FOREIGN KEY (client_id)
    REFERENCES client(client_id)


);

CREATE TABLE reports(
	report_id INT PRIMARY KEY AUTO_INCREMENT,
    total_amount varchar (255),
    date date,
    client_id int,
    trans_id int,    
	CONSTRAINT FKreportclientID FOREIGN KEY (client_id)
    REFERENCES client(client_id),
	CONSTRAINT FKtransID FOREIGN KEY (trans_id)
    REFERENCES transaction_records(trans_id)

);
CREATE TABLE trainor(
    trans_id INT PRIMARY KEY AUTO_INCREMENT
    name varchar (255)
    sched_id int,
    salary int,
    email varchar (255),
    password varchar (255)
    CONSTRAINT fksched_id FOREIGN KEY (sched_id)
    REFERENCES schedule (sched_id)

);

CREATE TABLE schedule(
    sched_id INT PRIMARY KEY AUTO_INCREMENT,
    client_id int,
    trainor_id int,
    session varchar (255)
    activity varchar(255),
    date date,
    time_start time,
    time_end time,
    CONSTRAINT fkschedclient_id FOREIGN KEY (client_id) 
    REFERENCES client (client_id)
    CONSTRAINT fktrainor_id FOREIGN KEY (trainor_id)
    REFERENCES trainor (trainor_id)

);

CREATE TABLE payment(
    payment_id INT PRIMARY KEY AUTO_INCREMENT,
    client_id int,
    date date,
    amount int,
    CONSTRAINT fkpayclient_id FOREIGN KEY (client_id)
    REFERENCES client(client_id)
);

CREATE TABLE membership(
    mem_id INT PRIMARY KEY AUTO_INCREMENT,
    client_id int,
    status varchar (255),
    date date,
    CONSTRAINT fkmemclient_id FOREIGN KEY (client_id)
    REFERENCES client(client_id)

);


